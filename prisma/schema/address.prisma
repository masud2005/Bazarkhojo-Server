model Address {
  id           Int      @id @default(autoincrement())
  userId       Int
  addressLine1 String
  addressLine2 String?
  city         String
  state        String?
  postalCode   String?
  country      String   @default("BD")
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
}