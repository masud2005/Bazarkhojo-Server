model SupportTicket {
  id          Int                @id @default(autoincrement())
  userId      Int
  subject     String
  description String
  status      SupportTicketStatus @default(OPEN)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  user        User               @relation(fields: [userId], references: [id])
  replies     TicketReply[]
}


enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}