model Blog {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  content     String
  image       String?
  authorId    String
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author      User      @relation(fields: [authorId], references: [id])
}