model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  ip        String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
}

model OutboxEvent {
  id            Int      @id @default(autoincrement())
  aggregateType String
  aggregateId   Int
  eventType     String
  payload       Json
  processed     Boolean
  createdAt     DateTime @default(now())
}