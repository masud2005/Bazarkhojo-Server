model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  ip        String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
}

model OutboxEvent {
  id            String   @id @default(uuid())
  aggregateType String
  aggregateId   String
  eventType     String
  payload       Json
  processed     Boolean
  createdAt     DateTime @default(now())
}